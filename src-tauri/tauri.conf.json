{
  "productName": "Focus Task Manager",
  "version": "1.0.0",
  "identifier": "com.focus.taskmanager",
  "build": {
    "beforeBuildCommand": "npm run prepare-dist",
    "beforeDevCommand": "npm run prepare-dist",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Focus Task Manager",
        "width": 400,
        "height": 700,
        "minWidth": 350,
        "minHeight": 600,
        "maxWidth": 450,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}